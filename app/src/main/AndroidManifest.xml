<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alfd.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="com.alfd.app.AlfdApplication"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.alfd.app.activities.MainActivity"
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.alfd.app.activities.ScanActivity"
            android:theme="@style/FullscreenTheme" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="com.alfd.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name="com.alfd.app.activities.NewProductActivity"
            android:label="@string/title_activity_new_product" >
        </activity>
        <activity
            android:name="com.alfd.app.activities.ProductFullScreenActivity"
            android:label="@string/title_activity_image_detail" >
        </activity>
        <activity android:name="com.alfd.app.activities.ProductDetailActivity" >
        </activity>
        <activity
            android:name="com.alfd.app.activities.TakePictureActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_take_picture"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <service android:name=".rest.RESTServer" android:exported="false"></service>
        <service android:name=".services.MoveTempProductFilesService" android:exported="false"></service>
    </application>

</manifest>
