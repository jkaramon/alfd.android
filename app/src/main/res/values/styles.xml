<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:buttonStyle">@style/default_button</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textViewStyle">@style/my_text_view</item>
    </style>

    <style name="my_text_view" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="large_text_view" parent="my_text_view">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:titleTextStyle">@style/action_bar_title</item>
    </style>

    <style name="action_bar_title" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="default_button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="primary_button" parent="default_button">
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="primary_button_large" parent="primary_button">
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="button_home_scan">
        <item name="android:layout_width">144dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:drawableBottom">@drawable/barcode</item>
        <item name="android:drawablePadding">24dp</item>
    </style>

    <style name="button_primary"></style>

    <style name="header_text">
        <item name="android:textSize">@dimen/text_xlarge</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="subtitle_text">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="hero_text" parent="header_text">
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="hero_subtitle_text">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray_darker</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>




    <style name="header_placeholder_text">
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/gray_lighter</item>
    </style>

    <style name="stop_watch_text">
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="media_button">
        <item name="android:padding">10dp</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>



</resources>